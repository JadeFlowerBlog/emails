/*
  Message list

  -- Message list bar internal layout and styles
*/

.messages-list
    display          flex
    flex-direction   column
    background-color white

    // defaults
    button
        background transparent
        border     none

    .drawer-toggle
        float left

    // TOOLBAR (filters / search / actions)
    //--------------------------------------------------------------------------
    // Layouts
    [role=toolbar]
        display       flex

        & > [role=menuitem]
            padding 0 .75em

        [role=group]:last-child
            flex 1

        .dropdown
            display flex

    [role=group]
        display flex

    .filters
        margin-right 1em

        i
            padding-left .5em

        .btn-label
            display none

        @media(min-width: 50em)
            .full & > [role=menuitem]
                i
                    padding-left 0

                .btn-label
                    display inline

        // Toggling mode for filter under < 600px
        @media(max-width: 37.5em)
            margin-right
            [role=presentation]
                cursor pointer

            [role=menuitem]
                display none

            &[aria-expanded=true] [role=menuitem]
                display block

            &[aria-expanded=false]
                margin-right 1px


    .search
        display flex

        input
            flex 1


    // Styles and colors
    [role=toolbar]
        background-color #f5f5f5
        box-shadow       0 1px 2px 0 rgba(0, 0, 0, 0.15)
        font-size        .875em

        i
            color basecolor

    [role=group]
            color basecolor

            i
                vertical-align baseline
                padding-right  .5em

        i[role=presentation]
            padding          .5em
            background-color basecolor
            color            white

    .filters
        [role=menuitem]
            border-right 1px solid rgba(0, 0, 0, 0.15)

            &:not(.dropdown)[aria-selected=false]:hover
                i
                .btn-label
                    color actioncolor

            &[aria-selected=true]
                background-color actioncolor

                i
                .btn-label
                    color white

    .search
        input
            padding 0 .5em
            border none


    // LIST ITEMS
    //--------------------------------------------------------------------------
    .main-content
        flex       1
        overflow-y auto
        padding    .5em 0

        // `end of the road`
        & > p
            text-align center
            font-size .875em

    .message
        // defaults
        border-bottom 1px solid #f5f5f5

        // Layouts
        .wrapper
            display flex
            padding .3125em 0

            & > div
                margin auto .5em

        .markers-wrapper
            display         flex
            flex-direction  column
            justify-content space-around
            margin          0 .5em !important

        .avatar-wrapper
            width         3em
            height        3em
            position      relative

            input
            .avatar
                position absolute

            .avatar
                top           0
                left          0
                display       block
                width         100%
                height        100%
                border-radius 50%

            input
                top       0
                left      50%
                transform translateX(-50%)

        .metas-wrapper
            flex        1
            display     flex
            flex-wrap   wrap
            line-height 1.4em

            .participants
                order 1

            .date
                order 2

            .subject
                order 3

            .extras
                order 4

                i
                    margin-left .75em

            .participants
            .subject
                flex 1 0 70%

            .preview
                order    5
                flex     1 0 100%
                height   1.4em
                overflow hidden

        // Styles
        .wrapper
            color           darkcolor
            text-decoration none

        .avatar
            line-height    2em
            text-align     center
            font-size      1.5em
            font-style     normal
            font-weight    bold
            text-transform uppercase
            color          white

        .preview
        .fa-circle-thin
            color mediumcolor

        .fa-circle
            color basecolor

        .fa-star
            color actioncolor

        .preview
            font-weight normal
            font-size   .875em

        .conversation-length
            color       basecolor
            font-family 'Source Sans Pro'
            font-style  normal
            font-weight normal

            &:before
                float       right
                font-family 'FontAwesome'
                font-size   .875em
                padding     .125em 0 0 .3125em

        .date
        .extras
            font-size .875em


        // Unread styles
        &.unseen
            .metas-wrapper
                font-weight bold


        // Hover / Edited styles
        &.edited
        &:hover
            .avatar
                display none
