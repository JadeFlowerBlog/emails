/*
  Message list

  -- Message list bar internal layout and styles
*/

.messages-list
    background-color #fff

    // defaults
    button
        background transparent
        border     none

    .drawer-toggle
        float left

    // TOOLBAR (filters / search / actions)
    //--------------------------------------------------------------------------
    // Layouts
    [role=toolbar]
        display       flex
        margin-bottom 1em

        & > [role=menuitem]
            padding 0 .75em

        [role=group]:last-child
            flex 1

        .dropdown
            display flex

    [role=group]
        display flex

    .filters
        margin-right 1em

        @media(max-width: 56em)
            & > [role=menuitem]
                i
                    padding-left .5em

                .btn-label
                    display none

    .search
        display flex

        input
            flex 1


    // Styles and colors
    [role=toolbar]
        background-color #f5f5f5
        box-shadow       0 1px 2px 0 rgba(0, 0, 0, 0.15)

        i
            color basecolor

    [role=group]
            color basecolor

            i
                vertical-align baseline
                padding-right  .5em

        i[role=presentation]
            padding          .5em
            background-color basecolor
            color            white

    .filters
        [role=menuitem]
            border-right 1px solid rgba(0, 0, 0, 0.15)

            &:not(.dropdown)[aria-selected=false]:hover
                i
                .btn-label
                    color actioncolor

            &[aria-selected=true]
                background-color actioncolor

                i
                .btn-label
                    color white

    .search
        input
            padding 0 .5em
            border none



