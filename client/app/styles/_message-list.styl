/*
  Message list

  -- Message list bar internal layout and styles
*/

// Temporary limit preview due to box model / flexbox issues
.messages-list .preview
    max-width 30vw

.full .messages-list .preview
    max-width 85vw


.messages-list
    display          flex
    flex-direction   column
    background-color white

    // defaults
    button
        background transparent
        border     none

    .drawer-toggle
        float left

    // TOOLBAR (filters / search / actions)
    //--------------------------------------------------------------------------
    // Layouts
    [role=toolbar]
        position    relative    // set root positionning for dropdowns
        display     flex
        flex-shrink 0

        & > [role=menuitem]
            padding 0 .75em
            margin-left -.0625em

        [role=group]:last-child
            flex 1

        .dropdown
            display flex

    [role=group]
        display flex

    .filters
        margin-right .5em

        i
            padding-left .5em

        .btn-label
            display none

        @media(min-width: 50em)
            .full & [role=menuitem]
                i
                    padding-left 0

                .btn-label
                    display inline

        // Toggling mode for filter under < 600px
        & > [role=presentation]
            display none

        @media(max-width: 37.5em)
            & > [role=presentation]
                display block
                cursor  pointer

            [role=menuitem]
                display none

            &[aria-expanded=true] [role=menuitem]
                display block

            &[aria-expanded=false]
                margin-right 1px


    [role=search]
        flex     1
        display  flex
        position relative

        input
            flex    1
            display flex

        .btn-group
            position absolute
            top      0
            right    0

        .btn:hover
            color actioncolor



    // Styles and colors
    [role=toolbar]
        background-color #f5f5f5
        box-shadow       0 1px 2px 0 rgba(0, 0, 0, 0.15)
        font-size        .875em

        i
            color basecolor

        > button
            border-right 1px solid rgba(0, 0, 0, 0.15)

    [role=group]
            color basecolor

            i
                vertical-align baseline
                padding-right  .5em

        i[role=presentation]
            padding          .65em
            background-color basecolor
            color            white

            &:hover
                background-color actioncolor


    .filters
        [role=menuitem]
            border-right 1px solid rgba(0, 0, 0, 0.15)

            &:not(.dropdown)[aria-selected=false]:hover
            &[aria-selected=true]:hover
                i
                .btn-label
                    color actioncolor

            &[aria-selected=true]
                background-color lightblue

    .search
        input
            padding 0 .5em
            border none

    .progress
        border-radius 0
        margin 0px
        height 5px
        box-shadow none
        background-image none


    // LIST ITEMS
    //--------------------------------------------------------------------------
    .main-content
        flex       1
        overflow-y auto
        padding    0 0 .5em 0

        // `end of the road`
        & > p
            text-align center
            font-size .875em

    .message
        // defaults
        border-bottom 1px solid #f5f5f5

        // Layouts
        .wrapper
            display flex
            padding .5em 0 1em

            & > div
                margin auto .5em

        .markers-wrapper
            display         flex
            flex-direction  column
            justify-content space-around
            margin          0 0 0 .5em !important
            align-items     center
            min-width       1em

            i
                font-size .75em
                color     darkcolor +30%

        .avatar-wrapper
            width         3em
            height        3em
            position      relative

            input
            .avatar
                position absolute

            .avatar
                top           0
                left          0
                display       block
                width         100%
                height        100%
                border-radius 50%

            input
                top       0
                left      50%
                transform translateX(-50%)

        .metas-wrapper
            flex        1
            display     flex
            flex-wrap   wrap
            line-height 1.4em

            .participants
                order 1

            .date
                order 2

            .subject
                order 3

            .extras
                order 4

                i
                    margin-left .75em

            .participants
            .subject
                flex 1 0 70%

            .preview
                order        5
                flex         1 0 100%
                // This is the most tricky and weird way I have found to bypass
                // flexbox calculation for internal sizes and permit an overflow
                // rendering. It's based on the padded-top responsive images
                // trick.
                height       1.6em
                white-space  nowrap
                position     relative
                max-width    0
                padding-left 100%

                p
                    position      absolute
                    left          0
                    width         100%
                    margin        0
                    overflow      hidden
                    text-overflow ellipsis


        // Styles
        .wrapper
            color           darkcolor
            text-decoration none

        .avatar
            line-height    2em
            text-align     center
            font-size      1.5em
            font-style     normal
            font-weight    bold
            text-transform uppercase
            color          white

        i.avatar
            opacity .7

        .preview
            color darkcolor +30%

        .fa-star
            color lightorange !important

        .preview
            font-weight normal
            font-size   .875em

        .conversation-length
            color       basecolor
            font-family 'Source Sans Pro'
            font-style  normal
            font-weight normal

            &:before
                float       right
                font-family 'FontAwesome'
                font-size   .875em
                padding     .125em 0 0 .3125em

        .date
        .extras
            font-size .875em


        // hover
        &:hover
            background-color lightorange !important

            .preview
                color darkcolor


        // Unread styles
        &.unseen
            .metas-wrapper
                font-weight bold

        &:not(.unseen)
            background-color lightcolor


        // Currently selected message
        main:not(.full) &.active
            background-color lightblue

            .preview
                color darkcolor


        // Edited mode
        .markers-wrapper
            .select
                cursor  pointer
                display none

        &:hover
        &.edited
            .markers-wrapper
                .select
                    display block

                i
                    display none
